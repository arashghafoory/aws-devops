AWSTemplateFormatVersion: '2010-09-09'
Description: Create Role for CodePipeline

Resources:
  EC2CodePipelineRole:
    Type: AWS::IAM::Role
    Properties:
      RoleName: Custom-EC2-CodePipeline-role
      AssumeRolePolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Effect: Allow
            Principal:
              Service:
                - ec2.amazonaws.com
            Action:
              - sts:AssumeRole
      Path: /
      ManagedPolicyArns:
        - arn:aws:iam::aws:policy/service-role/AmazonEC2RoleforAWSCodeDeploy
        - arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore
